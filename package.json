{
  "name": "zstd-napi",
  "version": "0.0.12",
  "description": "Zstandard (zstd) compression library bindings with Node-API",
  "keywords": [
    "binding",
    "compression",
    "native",
    "zstandard",
    "zstd",
    "Node-API",
    "N-API"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/drakedevel/zstd-napi.git"
  },
  "license": "Apache-2.0",
  "author": "Andrew Drake <adrake@adrake.org>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "NOTICE",
    "binding.d.ts",
    "binding.gyp",
    "binding.js",
    "build_flags.gypi",
    "deps",
    "dist",
    "src"
  ],
  "binary": {
    "napi_versions": [
      8
    ]
  },
  "scripts": {
    "build": "node-gyp configure && node-gyp build",
    "ci-ignore-scripts": "npm ci --ignore-scripts",
    "clang-format": "clang-format -i src/*",
    "install": "prebuild-install -r napi || node-gyp rebuild",
    "lint": "eslint .",
    "prepare": "tsc -p tsconfig.emit.json",
    "prettier": "prettier -l --write .",
    "submodule-update": "git submodule update --init",
    "test": "jest",
    "test-coverage": "jest --coverage --coverageReporters=json",
    "typedoc": "typedoc"
  },
  "dependencies": {
    "@types/node": "*",
    "node-addon-api": "^7.0.0",
    "prebuild-install": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "9.32.0",
    "@fast-check/jest": "2.1.1",
    "@jest/globals": "30.0.5",
    "@tsconfig/node20": "20.1.6",
    "@tsconfig/strictest": "2.0.5",
    "@types/eslint-config-prettier": "6.11.3",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-tsdoc": "0.4.0",
    "expect-type": "1.2.2",
    "globals": "16.3.0",
    "jest": "30.0.5",
    "node-gyp": "11.3.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.1",
    "typedoc": "0.28.9",
    "typescript": "5.8.3",
    "typescript-eslint": "8.39.0"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || ^15.12.0 || >=16"
  }
}
